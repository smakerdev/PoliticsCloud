    <script type="text/javascript">
        $(document).ready(function () {

            var words = [{
                    text: "<%= result[0].keyword %>",
                    weight: 13
                },
                {
                    text: "<%= result[1].keyword %>",
                    weight: 10
                },
                {
                    text: "<%= result[2].keyword %>",
                    weight: 9
                }
            ];

            // var words = [];        
            $("#demo").jQCloud(words, {
                delay: 50,
                autoResize: true
            });
        });
    </script>

